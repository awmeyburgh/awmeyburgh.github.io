{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vitepress/client"],
    "noEmit": true,
    "outDir": "./dist-ts"
  },
  "include": [
    ".vitepress/**/*",
    "**/*.md",
    ".vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
